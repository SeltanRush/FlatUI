@import '../../global/global.styl'

html
	@media screen and (max-width: 490px)
		font-size 12px

	@media screen and (max-width: 368px)
		font-size 10px

.header
	width 100%
	background-color _green
	height 12%
	border-bottom 0.3rem solid yellowgreen
	@media screen and (max-width: 705px)
		height 20%

	&__search
		width 15rem
	

.footer
	width 100%
	background-color _grey
	height 10%
	border-top 0.3rem solid yellowgreen

.main
	height 78%
	width 100%
	background-color _lightgrey
	margin 0 auto

.wrapper
	height 100%
	max-width 1200px
	margin 0 auto
	padding-left 1rem
	padding-right 1rem

.container
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center
	flex-wrap wrap

	&_header
		justify-content space-between
		@media screen and (max-width: 705px)
			justify-content center


@import '../../blocks/signin/signin'
@import '../../blocks/logo/logo'
@import '../../blocks/search/search'