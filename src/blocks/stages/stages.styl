.stages 
	position relative
	width 100%
	
	&__line
		position absolute
		height 0.3125rem
		background-color _orange
		top 44%
		z-index 1

	&__list
		display flex
		justify-content space-between
		width 100%
		padding 0
		margin 0
		list-style none
		position relative
		
		&::before
			display block
			content ''
			width 100%
			position absolute
			height 0.3125rem
			background-color _lightgrey
			top 44%

		.stage
			width 1.8125rem
			height 1.8125rem
			color _grey
			border-radius 50%
			background-color _lightgrey
			text-align center
			line-height 1.8125rem
			font-size 0.875rem
			font-family Lato, Arial, sans-serif
			position relative
			font-weight 800
			z-index 2

			&_current
				background-color _orange
				color #ffffff


		