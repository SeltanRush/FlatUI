mixin stages({count = 2, current = 1} = {})
	if current > count
		- count = current
	- let lineWidth =(current-1)*(100/(count-1))
	.stages
		ul.stages__list
			- let i = 0
			- for(;i<current;i++)
				li.stage.stage_current #{i+1}
			- for(;i<count;i++)
				li.stage #{i+1}
		.stages__line(style = ('width:' + lineWidth + '%'))