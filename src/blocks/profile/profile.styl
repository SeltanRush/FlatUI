@import '../avatar/avatar'

.profile
	position relative
	text-align center

	&__info
		opacity 0
		position absolute
		left 160%
		top 0
		width 10.1875rem
		height 5.8125rem
		background-color _lightgrey
		border-radius 0.375rem
		transition all 0.3s ease-in

		&::before
			content ''
			display block
			position absolute
			top 45%
			margin-left -0.875rem
			border 0.4375rem solid _lightgrey
			border-color transparent _lightgrey transparent transparent

	&_color_green &__info
		background-color _green

		&::before
			border-color transparent _green transparent transparent


	&:hover &__info
		opacity 1
		left 120%

	&__name
		margin-top 0.6875rem
		color _orange
		font-size 1.125rem
	
	&__job
		color _grey
		text-transform uppercase
		font-weight 800
		font-size 0.6875rem
		letter-spacing 0.05rem

	&_color_green &__name
		color #fff
	
	&_color_green &__job
		color #fff

	&_color_green &__link::before
		color #fff

	&__social
		width 6.125rem
		height 1rem
		margin 0 auto
		margin-top 0.8rem

	&__link
		display inline-block
		color white
		position relative
		width 1rem
		height 1.3rem
		margin-right 1.375rem

		&:last-of-type
			margin-right 0

		&::before
			content ''
			display block
			color grey
			position absolute
			font-family FontAwesome
			font-size 1.3rem

		&:hover::before
			color _orange

		&_drible::before
			content '\f17d'

		&_twitter::before
			content '\f099'

		&_fb::before
			content '\f09a'
	