@import '../button/button'
@import '../input/input'
@import '../block-title/block-title'
@import '../tickbox/tickbox'

.signin
	width 22rem
	height 14rem
	background-color #fff
	border 0.3rem solid yellowgreen
	border-radius 0.5rem
	padding 1rem 1rem
	@media screen and (max-width: 375px)
		width 94%

	& .block-title
		color yellowgreen

	&__input
		width 100%
		margin-top 1rem

	&__buttons
		display flex
		justify-content space-between

	&__check
		display flex
		width 100%
		height 1.8rem
		justify-content space-between
		align-items center
		margin 0.6rem 0
	
	&__text
		display inline-block
		font-weight 800
		font-size 0.8rem
		color yellowgreen
		text-transform uppercase
		line-height 1.5rem

	&__forgot
		font-weight 800
		font-size 0.8rem
		color yellowgreen
		text-transform uppercase
		cursor pointer

		& .signin__text:hover
			text-decoration underline

	&__remember
		width 50%
		display flex

		& .signin__text
			margin-right 0.5rem

	