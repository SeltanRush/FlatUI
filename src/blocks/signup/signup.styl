@import '../stages/stages'
@import '../input/input'
@import '../block-title/block-title'
@import '../textarea/textarea'
@import '../button/button'
@import '../toggle/toggle'

.signup
	width 100%
	height auto
	text-align center
	margin 2rem 0

	& .block-title
		color yellowgreen

	&__form
		width 28rem
		background-color #fff
		border 0.3rem solid yellowgreen
		border-radius 0.5rem
		padding 1rem 1rem
		margin 2rem auto
		@media screen and (max-width: 548px)
			width 94%
			margin 2rem auto

	&__input
		width 70%
		margin 1rem 0
		margin-left 10%
		@media screen and (max-width: 480px)
			margin 1rem

	&__textarea
		margin 1rem 10%
		@media screen and (max-width: 480px)
			margin 1rem

	&__toggles
		display flex
		margin 1rem 0
		margin-left 10%

	&__text
		font-weight 800
		font-size 0.8rem
		color yellowgreen
		text-transform uppercase
		line-height 1.5rem
		margin-left 1rem
