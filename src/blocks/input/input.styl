.input 
	width 100%
	position relative

	&__field
		font-family: SourceSansPro, Arial, sans-serif
		font-size: 0.875rem
		width: 100%
		height 1.75rem
		padding 0.5rem 0.8125rem
		border none
		background-color _lightgrey
		border-radius 0.2rem

		&:focus
			outline none

		&:not(:placeholder-shown):required:invalid + .input__validate_invalid
			opacity 1
			margin-left 0.4375rem

		&:required:valid ~ .input__validate_valid
			opacity 1
			margin-left 0.4375rem


		&::placeholder
			color _grey

	&__validate
		opacity 0
		display block
		text-transform uppercase
		width 4.375rem
		height 1.75rem
		border-radius 0.2rem
		background-color _orange
		position absolute
		top 0
		left 100%
		margin-left 3.4375rem
		font-size 0.625rem
		font-family Lato, Arial, sans-serif
		font-weight 800
		color #ffffff
		line-height 1.75rem
		text-align center
		letter-spacing 0.05rem
		transition all 0.2s ease-in

		&_valid
			background-color _green

		&::before
			content ''
			position absolute
			height 0.125rem
			margin auto 0
			margin-left -0.4rem
			left 0
			bottom 0
			top 0
			border 0.2rem solid _orange
			border-top-color transparent
			border-left-color transparent
			border-bottom-color transparent
		
		&_valid::before
			border-right-color _green
			


			

			

		
		