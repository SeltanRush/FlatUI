.slider
	width 16.25rem
	background _lightgrey !important
	height 0.3125rem !important
	border none !important

	.slider__range
		width 100%

	&.ui-slider-pips 
		margin 0 !important
	
	.ui-slider-pips [class*=ui-slider-pip-initial]
		color _lightgrey

	.ui-slider-label
		font-size 11px
		font-family Lato, sans-serif
		font-weight 800 !important
		color _lightgrey
		top -0.3rem !important

	.ui-slider-line
		display none


	& .ui-slider-handle
		border-radius 50%
		margin-top -0.17rem
		width 1.25rem
		height 1.25rem
		background-color _orange !important
		border none !important
		outline none
		cursor pointer !important

		& .ui-slider-tip
			background-color _orange
			border none
			color white
			font-family Lato
			font-weight 800
			font-size 0.8125rem

			&::before
			&::after
				border-top-color _orange
	
	&_color_green .ui-slider-handle
		background-color _green !important
		
		& .ui-slider-tip
			background-color _green

			&::before
			&::after
				border-top-color _green
	