@import '../avatar/avatar'

.left-side
	width 100%
	background-color #fff
	border 0.3rem solid yellowgreen
	border-radius 0.5rem
	padding 1rem 1rem
	height 30rem
	display flex
	flex-direction column
	align-items center

.menu
	display flex
	flex-direction column
	align-items center

	&__links
		margin 1rem 0
		display flex
		flex-direction column
		align-items center

	&__link
		text-transform uppercase
		font-weight 800
		font-size 1.5rem
		color yellowgreen

		&_active
			color _orange
			cursor default
